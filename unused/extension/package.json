{
  "name": "flame-vscode",
  "displayName": "Flame for VS Code",
  "description": "Run Python code in Autodesk Flame directly from VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.0"
  },
  "activationEvents": [
    "onCommand:flame.connect",
    "onCommand:flame.runInFlame",
    "onCommand:flame.startDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flame.connect",
        "title": "Flame: Connect"
      },
      {
        "command": "flame.runInFlame",
        "title": "Flame: Run in Flame"
      },
      {
        "command": "flame.testConnection",
        "title": "Flame: Test connection (ping)"
      },
      {
        "command": "flame.debugStatus",
        "title": "Flame: Debug status"
      },
      {
        "command": "flame.startDebug",
        "title": "Flame: Start debug server"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "package": "npx vsce package",
    "dev:install": "npm ci",
    "dev:build": "npm run compile"
  },
  "dependencies": {
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.108.1",
    "typescript": "^5.9.3"
  }
}
